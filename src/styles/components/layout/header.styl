.l-header
  img('bg-header.jpg')

  .no-flexbox &
    vAlign()

.l-header__inner
  height: inherit;
  container()
  jLine miidle


.project-logo
  position relative


.address--compact
  position relative

.address__phone
  display block
  brand 26px
  margin-bottom: 5px

.address__email
  title 15px
  &:before
    pi middle
    sprite $icon-mail
    margin-right: 6px




.cart--compact
  position relative
  hLine middle
  padding-left: 25px
  margin-left: 15px

  //custom border
  &:before
    p-ctr(y)
    left 0
    sprite $cart-compact-brdr

  .cart__main
    margin-top: -10px
    &>*
      margin-top: 5px


.cart__title
  brand 21px
  text-shadow: 0 1px 0 rgba(255,255,255,.4);

.cart__submit
  margin-left: 10px


.project-nav
  position relative
  background-color: #292727;
  background-image: linear-gradient(top, rgba(255,255,255,.14) 0%, rgba(255,255,255,0) 100%);

  /*glare*/
  &:before
    pb(left top)
    size 100% 50%
    opacity: .07;
    background-color: #fff;

  /*pattern*/
  &:after
    pattern .38

.project-nav__list
  container()
  jLine middle
  position relative
  z-index: 1;

.project-nav__list-item
  position relative

  //divider
  &:before
    p-ctr(y)
    left -1px
    size 2px 66%
    border-left: 1px solid rgba(0,0,0,.8);
    border-right: 1px solid rgba(255,255,255,.12);


  &:first-child

    &:before
      display none

    .project-nav__link
      padding-left: 0

  &:last-child
    .project-nav__link
      padding-right: 0


.project-nav__link
  display block
  padding: 15px 31px
  @extend .link-decorated-reverse
  brand 22px #e5e1df
  text-shadow: 0 1px 1px rgba(2,3,3,.63);
  text-transform: uppercase;